*
  box-sizing border-box

body
  color $text-color
  font-family 'Ubuntu Condensed',-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen-Sans,Ubuntu,Cantarell,"Helvetica Neue",sans-serif;
  font-size 20px
  line-height 1.2
  max-width 1200px
  margin 0 auto

h1,
h2
  margin 0 0 0.5em

h1
  font-size 1.2em
  font-weight 600

h2
  font-size 1.1em

img
  max-height 100%
  max-width 100%

.main
  line-height 1.2

a
  color $text-color
  text-decoration none

  &:hover
    text-decoration underline


  &.button
    background-color $text-color
    color $white
    display block
    padding .5em
    margin .5em
p
  margin 1em 0

.annotated p
  margin 0

ul.nav
  li
    display block

.impressum
  margin 0 auto
  width 80%
  min-width 250px

  #hat
    width 30%

.footer
  background-color $text-color
  bottom 0
  color $white
  font-size .8em
  left 0
  padding .5em
  position fixed
  text-align center
  top auto
  width 100%

  a
    color $white

    &:hover
      text-decoration underline

// utilities
.block
  margin 2em 0


.social
  text-align center
  position absolute
  top 1em
  right 1em
  left auto

  ul
    display inline-block

    li
      float left
      margin .5em .2em

  svg
    height 1.5em
    width 1.5em
    fill $less-subtle-color

// layout

h3
  font-size 1.2em

.hero h3
  text-decoration underline

.description
  width 90%
  margin 0 auto

.hex
  display block
  margin 0 auto
  position relative
  min-height 250px
  min-width 250px
  max-width 400px
  max-height 400px
  width 90vw
  height 90vw

  &.big
    max-height 500px
    max-width 500px

  &.small
    text-align center
    min-width inherit
    min-height inherit
    width auto
    height auto

    .container
      display inline-block

    .hex__svg
      fill #444444
      stroke #444444
      width 3em
      height 3em
      position relative
      float left

    .hex__link
      float left
      line-height 3em

      span
        margin 0 0 0 .2em

  .hex__content
    position relative
    text-align center
    width 60%
    height 60%
    top 20%
    left 20%

    &.annotated
      color $subtle-color

      p
        margin .2em 0
      h2
        margin .3em 0
        font-weight 600

.hex__svg
  position absolute
  width 100%
  height 100%
  fill $white
  stroke $less-subtle-color
  stroke-width 1

/* youtube video variable height/width hack */
.movie
  height 0px
  overflow hidden
  padding-bottom 56.25%
  position relative
  max-width 80%
  margin 1em auto

  iframe
    height 100%
    left 0px
    position absolute
    top 0px
    width 100%